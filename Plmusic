            <h1>piglet music</h1>
        </div>

        <!-- 搜索框 -->
        <div class="search-box">
            <input type="text" placeholder="搜索歌曲名...">
        </div>

        <!-- 推荐音乐区域 -->
        <div class="music-section">
            <h2>推薦音樂</h2>
            <div class="song-header">
                <div class="name-col">歌曲名</div>
                <div class="singer-col">歌手</div>
            </div>
            <!-- 歌曲项（点击播放） -->
            <div class="song-item" onclick="playSong('李柏黃河', '李柏')">
                <div class="name-col">李柏黃河</div>
                <div class="singer-col">李柏</div>
            </div>
        </div>
    </div>

    <!-- 底部播放栏 -->
    <div class="player-bar">
        <div class="music-icon">♫</div>
        <div class="song-info">
            <div id="current-song" class="no-song">未選擇歌曲</div>
            <div id="current-singer">by 歌手</div>
        </div>
        <div class="controls">
            <button class="prev-btn">◀</button>
            <button class="play-btn" id="play-toggle">▶</button>
            <button class="next-btn">▶</button>
        </div>
    </div>

    <!-- 音频元素 -->
    <audio id="audio-player" src="https://erica-lnc.github.io/PTT-20260116-WA0001.mp3"></audio>

    <script>
        const audio = document.getElementById('audio-player');
        const playToggle = document.getElementById('play-toggle');
        const currentSongEl = document.getElementById('current-song');
        const currentSingerEl = document.getElementById('current-singer');
        let isPlaying = false;

        // 点击歌曲播放（同步歌手名）
        function playSong(songName, singer) {
            currentSongEl.textContent = songName;
            currentSongEl.classList.remove('no-song');
            currentSingerEl.textContent = `by ${singer}`;
            audio.play();
            isPlaying = true;
            playToggle.textContent = '❙❙';
        }

        // 播放/暂停切换
        playToggle.addEventListener('click', () => {
            if (isPlaying) {
                audio.pause();
                playToggle.textContent = '▶';
            } else {
                audio.play();
                playToggle.textContent = '❙❙';
            }
            isPlaying = !isPlaying;
        });
    </script>
